<%= form_for @user do |f| %>
  <p>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </p>
  <p class="actions">
    <%= f.submit class: 'btn btn-primary' %>
    <%= link_to 'Cancel', root_url, class: 'btn' %>
  </p>
<% end %>
